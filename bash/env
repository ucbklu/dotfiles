#Environment variables

#Bin Files
PATH=~/bin:$PATH

#Sublime Text 2
EDITOR='subl -w'

#Bundler -- using "bundle install --binstubs .bundle/bin"
PATH="./.bundle/bin:$PATH"

#Brew packages
PATH="/usr/local/bin:/usr/local/sbin:~/bin:$PATH"

#RBENV
PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"

#acquia drupal
PATH=~/bin:/Applications/acquia-drupal/mysql/bin:/Applications/acquia-drupal/php/bin:/Applications/acquia-drupal/apache/bin:$PATH

#Drush
PATH=~/github/drush:$PATH
source ~/github/drush/drush.complete.sh

#Git
source ~/.git-completion.sh

export EDITOR PATH