#Aliases

#bash
alias h='history'
alias ll='ls -al'
alias ..='cd ..'
alias rel='source ~/.bashrc'
alias c='clear'
alias md='mkdir -p'

#mkdir and cd
function take {
  mkdir $1
  cd $1
}

#sublime
alias ea='subl -w ~/bin/dotfiles/bash/aliases & rel'
alias ee='subl ~/bin/dotfiles/bash/env'

#finder
alias o='open . &'
alias ff='open -a Firefox'

#drush
alias drush='~/drush/drush'

#git
alias g='git status'
alias ga='git add'
alias gaa='git add -A'
alias gc='git commit -v'
alias gcm='git commit -v -m'
alias gca='git commit -v -a'
alias gd='git diff'
alias gco='git checkout'
alias gl='git pull'
alias gp='git push'
alias gb='git branch'
alias glg='git log'

#commit pending changes and quote all args as message
gg() {
  git commit -v -a -m "$*"
}

#cd directories
alias cdg='cd ~/github'
alias cdb='cd ~/github/berkeley-7.x'
alias cdp='cd ~/Sites/pantheon_v2'
alias cdbkp='cd ~/Sites/backups'


#berkeley theme updates

#replace existing theme with symlink: takes $arg1
reptheme() {
  if [ -z "$1" ]
  then
    echo "Needs one parameter"
  else
    git rm -r ~/Sites/pantheon_v2/$1/sites/all/themes/berkeley &&
    rm -Rf ~/Sites/pantheon_v2/$1/sites/all/themes/berkeley &&
    ln -s ~/github/berkeley-7.x ~/Sites/pantheon_v2/$1/sites/all/themes/berkeley
  fi
}

#remove symlink and copy latest theme using rsync
applytheme() {
  if [ -z "$1" ]
  then
    echo "Needs one parameter"
  else
    rm ~/Sites/pantheon_v2/$1/sites/all/themes/berkeley &&
    rsync -avh --exclude=".*/" ~/github/berkeley-7.x/ ~/Sites/pantheon_v2/$1/sites/all/themes/berkeley
  fi
}

#remove existing theme
rmtheme() {
  if [ -z "$1" ]
  then
    echo "Needs one parameter"
  else
    git rm -r ~/Sites/pantheon_v2/$1/sites/all/themes/berkeley
  fi
}

alias rmtheme_ot="git rm -r ~/Sites/pantheon_v2/ot/sites/all/themes/berkeley"
alias rmtheme_risk="git rm -r ~/Sites/pantheon_v2/riskservices/sites/all/themes/berkeley"
alias rmtheme_staffombuds="git rm -r ~/Sites/pantheon_v2/staffombuds/sites/all/themes/berkeley"
alias rmtheme_compliance="git rm -r ~/Sites/pantheon_v2/compliance/sites/all/themes/berkeley"
alias rmtheme_ethics="git rm -r ~/Sites/pantheon_v2/ethics3/sites/all/themes/berkeley"
alias rmtheme_chanc="git rm -r ~/Sites/pantheon_v2/chancellor/sites/all/themes/berkeley"
alias rmtheme_acads="git rm -r ~/Sites/pantheon_v2/acads/sites/all/themes/berkeley"
alias rmtheme_ccac="git rm -r ~/Sites/pantheon_v2/ccac/sites/all/themes/berkeley"
alias rmtheme_audit="git rm -r ~/Sites/pantheon_v2/audit/sites/all/themes/berkeley"
alias rmtheme_mypower="git rm -r ~/Sites/pantheon_v2/mypower111/sites/all/themes/berkeley"

#run rm -Rf if needed (if git rm -r doesn't remove cleanly)
cleanup() {
  if [ -z "$1" ]
  then
    echo "Needs one parameter"
  else
    rm -Rf ~/Sites/pantheon_v2/$1/sites/all/themes/berkeley
  fi
}

alias cleanup_ot="rm -Rf ~/Sites/pantheon_v2/ot/sites/all/themes/berkeley"
alias cleanup_risk="rm -Rf ~/Sites/pantheon_v2/riskservices/sites/all/themes/berkeley"
alias cleanup_staffombuds="rm -Rf ~/Sites/pantheon_v2/staffombuds/sites/all/themes/berkeley"
