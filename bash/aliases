#Aliases

#bash
alias h='history'
alias ll='ls -al'
alias ..='cd ..'
alias rel='source ~/.bashrc'
alias c='clear'
alias md='mkdir -p'

#mkdir and cd
function take {
  mkdir $1
  cd $1
}

#sublime
alias ea='subl -w ~/bin/dotfiles/bash/aliases & rel'
alias ee='subl ~/bin/dotfiles/bash/env'

#finder
alias o='open . &'
alias ff='open -a Firefox'

#drush
alias drush='~/drush/drush'

#git
alias g='git status'
alias ga='git add'
alias gaa='git add -A'
alias gc='git commit -v'
alias gcm='git commit -v -m'
alias gca='git commit -v -a'
alias gd='git diff'
alias gco='git checkout'
alias gl='git pull'
alias gp='git push'
alias gb='git branch'
alias glg='git log'

#commit pending changes and quote all args as message
function gg() {
  git commit -v -a -m "$*"
}

#cd directories
alias cdg='cd ~/github'
alias cdb='cd ~/github/berkeley-7.x'
alias cdp='cd ~/Sites/pantheon_v2'
alias cdbkp='cd ~/Sites/backups'


#berkeley theme updates

#remove existing theme
alias rmtheme_ot="git rm -r ~/Sites/pantheon_v2/ot/sites/all/themes/berkeley"
alias rmtheme_risk="git rm -r ~/Sites/pantheon_v2/riskservices/sites/all/themes/berkeley"
alias rmtheme_staff="git rm -r ~/Sites/pantheon_v2/staffombuds/sites/all/themes/berkeley"
alias rmtheme_compliance="git rm -r ~/Sites/pantheon_v2/compliance/sites/all/themes/berkeley"

#symlink to berkeley theme
alias symtheme_ot="ln -s ~/github/berkeley-7.x ~/Sites/pantheon_v2/ot/sites/all/themes/berkeley"
alias symtheme_risk="ln -s ~/github/berkeley-7.x ~/Sites/pantheon_v2/riskservices/sites/all/themes/berkeley"
alias symtheme_staff="ln -s ~/github/berkeley-7.x ~/Sites/pantheon_v2/staffombuds/sites/all/themes/berkeley"
alias symtheme_compliance="ln -s ~/github/berkeley-7.x ~/Sites/pantheon_v2/compliance/sites/all/themes/berkeley"

#remove symlink to berkeley theme
alias nosymtheme_ot="rm ~/Sites/pantheon_v2/ot/sites/all/themes/berkeley"
alias nosymtheme_risk="rm ~/Sites/pantheon_v2/riskservices/sites/all/themes/berkeley"
alias nosymtheme_staff="rm ~/Sites/pantheon_v2/staffombuds/sites/all/themes/berkeley"
alias nosymtheme_compliance="rm ~/Sites/pantheon_v2/compliance/sites/all/themes/berkeley"

#copy latest theme using rsync
alias rsynctheme_ot="rsync -avh --exclude=".*/" ~/github/berkeley-7.x/ ~/Sites/pantheon_v2/ot/sites/all/themes/berkeley"
alias rsynctheme_risk="rsync -avh --exclude=".*/" ~/github/berkeley-7.x/ ~/Sites/pantheon_v2/riskservices/sites/all/themes/berkeley"
alias rsynctheme_staff="rsync -avh --exclude=".*/" ~/github/berkeley-7.x/ ~/Sites/pantheon_v2/staffombuds/sites/all/themes/berkeley"
alias rsynctheme_compliance="rsync -avh --exclude=".*/" ~/github/berkeley-7.x/ ~/Sites/pantheon_v2/compliance/sites/all/themes/berkeley"
