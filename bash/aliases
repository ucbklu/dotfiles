alias pg_stop_test="pg_ctl -D /usr/local/var/pg_data -l /tmp/logfile stop"

#pg_dump
pgd() {
  if [ -z "$1" ]
  then
    echo "Needs two parameters: db and filename.sql"
  else
    pg_dump $1 > ~/Ruby/backups/psql_bkps/$2
  fi
}

#pg - restore from bkp
pgr() {
  if [ -z "$1" ]
  then
    echo "Needs two parameters: db and filename.sql"
  else
    psql $1 > ~/Ruby/backups/psql_bkps/$2
  fi
}

